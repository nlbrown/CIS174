@model CIS174_TestCoreApp.Models.Ch10CreatePersonViewModel

@{
    ViewData["Title"] = "Create";
}

<environment include="Testing.Staging">
    <div class="warning">You are in a testing Env</div>
</environment>
<h2>Create </h2>
<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.FirstName)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(m => m.FirstName)
                </div>
                <div class="pull-right col-md-8 text-danger">
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
            </div>


            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.LastName)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(m => m.LastName)
                </div>
                <div class="pull-right col-md-8 text-danger">
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.BirthDate)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(m => m.BirthDate)
                </div>
                <div class="pull-right col-md-8 text-danger">
                    @Html.ValidationMessageFor(m => m.BirthDate)
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.City)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(m => m.City)
                </div>
                <div class="pull-right col-md-8 text-danger">
                    @Html.ValidationMessageFor(m => m.City)
                </div>
            </div>


            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.State)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(m => m.State)
                </div>
                <div class="pull-right col-md-8 text-danger">
                    @Html.ValidationMessageFor(m => m.State)
                </div>
            </div>


            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.SetOfAccomplishments)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(m => m.SetOfAccomplishments)
                </div>
                <div class="pull-right col-md-8 text-danger">
                    @Html.ValidationMessageFor(m => m.SetOfAccomplishments)
                </div>
            </div>

        </div>
    </div>
    <button class="btn btn-primary" type="submit">Create</button>
</form>